<% provide(:title, 'Sign up') %>
<div class="lolsauce">
  <h1>Sign up</h1>

  <div class="row">
    <div class="span6 offset3">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: @user %>
        <%= f.label :name %>
        <%= f.text_field :name %>

      <%= f.label "Pet Type" %>
      <%= f.select :pettype, [['Cat', 'Cat'], ['Dog', 'Dog'], ['Bird', 'Bird'], ['Hamster', 'Hamster']] %>

      <%= f.label :breed %>
      <%= f.text_field :breed %>

      <%= f.label :birthday %>
      
      <%# Fucking PHP programmers, messing up our sexy Ruby code ;) %>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.8.2.js"></script>
    <script src="http://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>
    <script>
    $(function() {
        $( "#user_birthday" ).datepicker({ dateFormat: "yy/mm/dd", altFormat: "yy/mm/dd", maxDate: 0, changeYear: true });
    });
    </script>
      <input id="user_birthday" name="user[birthday]" size="30" type="text">

      <%= f.label :email %>
      <%= f.text_field :email %>
	  
	  <%= f.label :photo %>
      <%= f.file_field :photo %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
